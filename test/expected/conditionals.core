module 'Merlot.Conditionals' ['max'/2,
                       'min'/2,
                       'abs'/1,
                       'sign'/1]
    attributes []

'max'/2 =
    fun (X, Y) ->
      case call 'erlang':'>' (X, Y) of
  <'true'> when 'true' -> X
  <'false'> when 'true' -> Y
end
'min'/2 =
    fun (X, Y) ->
      case call 'erlang':'<' (X, Y) of
  <'true'> when 'true' -> X
  <'false'> when 'true' -> Y
end
'abs'/1 =
    fun (X) ->
      case call 'erlang':'<' (X, 0) of
  <'true'> when 'true' -> call 'erlang':'-' (X)
  <'false'> when 'true' -> X
end
'sign'/1 =
    fun (X) ->
      case call 'erlang':'>' (X, 0) of
  <'true'> when 'true' -> 1
  <'false'> when 'true' -> case call 'erlang':'<' (X, 0) of
  <'true'> when 'true' -> -1
  <'false'> when 'true' -> 0
end
end
end
