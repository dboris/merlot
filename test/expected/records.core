module 'Merlot.Records' ['create_person'/2,
                       'get_name'/1,
                       'get_age'/1,
                       'birthday'/1,
                       'rename'/2,
                       'create_employee'/4,
                       'get_employee_name'/1]
    attributes []

'create_person'/2 =
    fun (Name, Age) ->
      {'person', Name, Age}
'get_name'/1 =
    fun (P) ->
      call 'erlang':'element' (2, P)
'get_age'/1 =
    fun (P) ->
      call 'erlang':'element' (3, P)
'birthday'/1 =
    fun (P) ->
      {'person', call 'erlang':'element' (2, P), call 'erlang':'+' (call 'erlang':'element' (3, P), 1)}
'rename'/2 =
    fun (P, New_name) ->
      {'person', New_name, call 'erlang':'element' (3, P)}
'create_employee'/4 =
    fun (Name, Age, Street, City) ->
      {'employee', {'person', Name, Age}, {'address', Street, City}}
'get_employee_name'/1 =
    fun (E) ->
      call 'erlang':'element' (2, call 'erlang':'element' (2, E))
end
